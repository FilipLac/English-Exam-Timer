<Page
    x:Class="English_Exam_Timer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:English_Exam_Timer"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- hlavní obsah -->
            <RowDefinition Height="Auto" />
            <!-- spodní tlačítka -->
        </Grid.RowDefinitions>

        <!-- Hlavní obsah: časovač -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
            <TextBlock x:Name="TimerMain" Text="00:00" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lap" Text="Lap 1" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lRemainingTime" Text="000s" FontSize="16" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Spodní panel s tlačítky -->
        <Border Grid.Row="1" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="10">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <Button x:Name="StartTimerButton" Content="Start" Click="StartTimerButton_Click" />
                    <Button x:Name="PauseTimerButton" Content="Pause" Click="PauseTimerButton_Click" />
                    <Button x:Name="StopAndResetTimerButton" Content="Stop &amp; Reset" Click="StopAndResetTimerButton_Click" />
                    <Button x:Name="ButtonModifyTimer" Content="Upravit fáze" Click="ButtonModifyTimer_Click" />
                    <ToggleSwitch x:Name="LoopTS" Header="Smyčka" Toggled="LoopTS_IsOn" />
                </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Page>
