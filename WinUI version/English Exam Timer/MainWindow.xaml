<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="English_Exam_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:English_Exam_Timer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="G.E. Timer (v1.4.0)">
    <!--Height="600" Width="1100"-->
    <!--WindowStartupLocation="CenterScreen"-->

    <Grid Background="WhiteSmoke">
        <!-- Datum a čas -->
        <TextBlock x:Name="CurrentDateandTime" 
               FontSize="28" 
               HorizontalAlignment="Left" 
               Margin="24,19,0,0"/>

        <!-- Remaining Time TextBlock -->
        <TextBlock x:Name="Remainingtime" 
               FontSize="24" 
               HorizontalAlignment="Left" 
               Margin="24,89,0,0"/>
        <!--dvojtecka u RemainingTime-->

        <TextBlock x:Name="lRemainingTime"
           FontSize="25"
           HorizontalAlignment="Left"
           Margin="289,89,0,0"
           Text="000"/>


        <!-- ProgressBar -->
        <ProgressBar x:Name="ProgressBarTimer" 
                     Height="23" 
                     Width="854" 
                     HorizontalAlignment="Left" 
                     Margin="120,350,0,0"/>

        <!-- Minuty a sekundy -->
        <TextBlock x:Name="TimerMain" 
               FontSize="96" FontWeight="Bold"
               HorizontalAlignment="Left" 
               Margin="582,177,0,0"/>

        <!-- Lap Time -->
        <TextBlock x:Name="CurrentLap" 
               FontSize="28" 
               HorizontalAlignment="Left" 
               Margin="759,19,0,0"/>
        <TextBlock x:Name="lap" 
               FontSize="28" FontWeight="Bold"
               HorizontalAlignment="Left" 
               Margin="998,19,0,0"/>
        <!--dvojtecka u current lap-->

        <!-- Buttons -->
        <Button x:Name="StartTimer" 
                Content="Start"
                FontSize="28" 
                Background="LightGreen"
                Width="296" Height="134"
                HorizontalAlignment="Left"
                Margin="15,451,0,0"
                Click="StartTimerButton_Click"/>

        <Button x:Name="PauseTimer" 
                Content="Pause"
                FontSize="28" 
                Background="Linen"
                Width="304" Height="134"
                HorizontalAlignment="Left"
                Margin="317,451,0,0"
                Click="PauseTimerButton_Click"/>

        <Button x:Name="StopandResetTimer" 
                Content="Stop/Reset Timer"
                FontSize="22" 
                Background="OrangeRed"
                Width="284" Height="133"
                HorizontalAlignment="Left"
                Margin="627,451,0,0"
                Click="StopAndResetTimerButton_Click"/>

        <Button x:Name="ModifyTimer" 
                Content="⚙"
                FontSize="42" 
                Background="Gray"
                Width="184" Height="134"
                HorizontalAlignment="Left"
                Margin="917,450,0,0"
                Click="ButtonModifyTimer_Click"/>

        <!-- Checkbox
        <CheckBox x:Name="Loop"
                  FontSize="36" 
                  IsChecked="True"
                  HorizontalAlignment="Left"
                  Margin="934,379,0,0"
                  Checked="ChbWantLoop_CheckedChanged"/> -->
        <ToggleSwitch 
                  x:Name="LoopTS"
                  FontSize="24" 
                  IsOn="True"
                  HorizontalAlignment="Left"
                  Margin="934,379,0,0"/>
            <!-- AutomationProperties.Name="LoopTS"-->
    </Grid>
</Window>