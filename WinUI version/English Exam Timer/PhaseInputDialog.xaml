<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="English_Exam_Timer.PhaseInputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Úprava fáze"
    PrimaryButtonText="OK"
    CloseButtonText="Zrušit"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel Spacing="12">
        <TextBox x:Name="NameBox" Header="Název fáze" PlaceholderText="Např. Čtení" />
        <TextBox x:Name="DurationBox" Header="Délka (v sekundách)" InputScope="Number" PlaceholderText="Např. 180" />
    </StackPanel>
</ContentDialog>
