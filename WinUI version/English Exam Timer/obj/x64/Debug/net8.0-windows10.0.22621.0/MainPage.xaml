<Page
    x:Class="English_Exam_Timer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:English_Exam_Timer"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- hlavní obsah -->
            <RowDefinition Height="Auto" />
            <!-- spodní tlačítka -->
        </Grid.RowDefinitions>

        <!-- Hlavní obsah: časovač -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
            <TextBlock x:ConnectionId='8' x:Name="TimerMain" Text="00:00" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='9' x:Name="lap" Text="Lap 1" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='10' x:Name="lRemainingTime" Text="000s" FontSize="16" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Spodní panel s tlačítky -->
        <Border Grid.Row="1" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="10">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <Button x:ConnectionId='3' x:Name="StartTimerButton" Content="Start"                                />
                    <Button x:ConnectionId='4' x:Name="PauseTimerButton" Content="Pause"                                />
                    <Button x:ConnectionId='5' x:Name="StopAndResetTimerButton" Content="Stop &amp; Reset"                                       />
                    <Button x:ConnectionId='6' x:Name="ButtonModifyTimer" Content="Upravit fáze"                                 />
                    <ToggleSwitch x:ConnectionId='7' x:Name="LoopTS" Header="Smyčka"                       />
                </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Page>

