<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="English_Exam_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:English_Exam_Timer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="G.E. Timer (v1.4.0)">
    <!--Height="600" Width="1100"-->
    <!--WindowStartupLocation="CenterScreen"-->

    <Grid x:ConnectionId='2' x:Name="RootGrid" Background="WhiteSmoke">
        <!-- Datum a čas -->
        <TextBlock x:ConnectionId='3' x:Name="CurrentDateandTime" 
               Text="Current Date and Time"
               
               FontSize="28" 
               HorizontalAlignment="Left" 
               Margin="24,19,0,0"/>

        <!-- Remaining Time TextBlock -->
        <TextBlock x:ConnectionId='4' x:Name="Remainingtime" 
               Text="Remaining Time: "
               FontSize="24" 
               HorizontalAlignment="Left" 
               Margin="24,89,0,0"/>

        <TextBlock x:ConnectionId='5' x:Name="lRemainingTime"
           FontSize="25"
           HorizontalAlignment="Left"
           Margin="289,89,0,0"
           Text="000"/>


        <!-- ProgressBar -->
        <ProgressBar x:ConnectionId='6' x:Name="ProgressBarTimer" 
                     Height="23" 
                     Width="854" 
                     HorizontalAlignment="Left" 
                     Margin="120,350,0,0"/>

        <!-- Minuty a sekundy -->
        <TextBlock x:ConnectionId='7' x:Name="TimerMain" 
               Text="00:00"
               FontSize="96" FontWeight="Bold"
               HorizontalAlignment="Left" 
               Margin="582,177,0,0"/>

        <!-- Lap Time -->
        <TextBlock x:ConnectionId='8' x:Name="CurrentLap" 
               Text="Current Lap: "
               FontSize="28" 
               HorizontalAlignment="Left" 
               Margin="759,19,0,0"/>
        <TextBlock x:ConnectionId='9' x:Name="lap" 
               FontSize="28" FontWeight="Bold"
               HorizontalAlignment="Left" 
               Margin="998,19,0,0"/>

        <!-- Buttons -->
        <Button x:ConnectionId='10' x:Name="StartTimer" 
                Content="Start"
                FontSize="28" 
                Background="LightGreen"
                Width="296" Height="134"
                HorizontalAlignment="Left"
                Margin="15,451,0,0"
                                              />

        <Button x:ConnectionId='11' x:Name="PauseTimer" 
                Content="Pause"
                FontSize="28" 
                Background="Bisque"
                Width="304" Height="134"
                HorizontalAlignment="Left"
                Margin="317,451,0,0"
                                              />

        <Button x:ConnectionId='12' x:Name="StopandResetTimer" 
                Content="Stop/Reset Timer"
                FontSize="22" 
                Background="OrangeRed"
                Width="284" Height="133"
                HorizontalAlignment="Left"
                Margin="627,451,0,0"
                                                     />

        <Button x:ConnectionId='13' x:Name="ModifyTimer" 
                Content="⚙"
                FontSize="42" 
                Background="Gray"
                Width="184" Height="134"
                HorizontalAlignment="Left"
                Margin="917,450,0,0"
                                               />

        <ToggleSwitch x:ConnectionId='14' 
                  x:Name="LoopTS"
                  FontSize="24" 
                                       
                  IsOn="True"
                  HorizontalAlignment="Left"
                  Margin="934,379,0,0"/>
    </Grid>
</Window>

